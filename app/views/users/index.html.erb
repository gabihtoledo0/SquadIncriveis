            -
            <% else %>
            <%= user.cpf %>
            <% end %>
          </td>
          <td><% if user.cnpj.nil? %>
            -
            <% else %>
            <%= user.cnpj %>
            <% end %>
          </td>
          <td><%= user.email %></td>
          <td><% if user.adm  %>
            Administrador
            <% else %>
            Comum
            <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</body>


