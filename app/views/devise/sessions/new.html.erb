<h2 class="fonte-titulo"> Bem-vindo a Youse </h2>
<h5 class="fonte-h3"> Faça seu login para começar ;) </h5>
</br>

<body>

  <head>
    <link href="css/application.css" rel="stylesheet" type="text/CSS" </head> </head>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %> 

      <div class="container bg-white container-login justify-content-center">
    </br>
    </br>

    <div class="row">
      <div class="col-sm field">

        <%= f.label :email, values = "Email", :class => "fonte-label", :style => "margin-right: 250px"%>

        <div class="col-sm field">
          <%= f.email_field :email, autofocus: true, autocomplete: "Email", :class => "caixa-de-texto borda-caixa-texto", :placeholder => "exemplo@youse.com.br"%>

        </div>

        </br>
        </br>

      </div>
    </div>
    </div>


    <div class="container bg-white container-login justify-content-center ">
      <div class="row">
        <div class="col-sm field">
          <%= f.label :password, value = "Senha", :class => "fonte-label" , :style => "margin-right: 240px"%>

          <div class="col-sm field">
            <%= f.password_field :password, autocomplete: "Senha", :class => "caixa-de-texto borda-caixa-texto" , :placeholder => "Senha"%>
          </div>
          </br>
          </br>
        </div>
      </div>
    </div>

    <div class="container bg-white container-login">
      <div class="row">
        <div class="col-sm field .col-6 .col-md-4">
          <% if devise_mapping.rememberable?%>
          <%= f.check_box :remember_me, :style => "margin-left:180px"%>
        </div>
        <div class="col-sm field .col-12 .col-md-8">
          <%= f.label :remember_me, value = "Lembre-me", :class => "checkbox-pequena", :style => "margin-right:100px"%>
          <% end %>
        </div>

      </div>
      </br>
      </br>
    </div>

    <div class="container bg-white container-login">
      <div class="row">
        <div class="col-sm field">
          <%= f.submit "ENTRAR", :class => "btn botao" ,:style => "margin-left:60px"%>
        </div>
        <div class="col-sm field">
          <input type="reset" value="CANCELAR" class="btn botao" , style="margin-right:50px">
        </div>

      </div>
      </br>
    </div>



    <% end %>


    <%= render "devise/shared/links" %>
    </br>

    <img src="<%= image_url('simb.png') %>" width="100" height="80" class="d-inline-block align-top displayed"
      alt="logo os incriveis">
    <img src="<%= image_url('icon2.png') %>" width="400" height="400" class="d-inline-block align-top alerta"
      alt="logo os incriveis">

</body>