<br>
<h2 class="fonte-titulo">Edite Seu Perfil</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
<%= render "devise/shared/error_messages", resource: resource %>

<br>
<br>
<div class="container bg-white container-edit justify-content-center">
  <br>
  <div class="field-edit">
    <%= f.label :email, :class => "fonte-label", :style => "margin-right: 250px" %><br />
    <%= f.email_field :email, :class => "caixa-de-texto-login borda-caixa-texto", autofocus: true, autocomplete: "Email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
  <div>Atualmente aguardando confirmação para:<%= resource.unconfirmed_email %></div>
  <% end %>

  <br>
  <br>
  <div class="field">
    <%= f.label :fullname, :class => "fonte-edit", :style => "margin-right: 160px" %><br />
    <%= f.text_field :fullname, :class => "caixa-de-texto-login borda-caixa-texto", autofocus: true %>
  </div>

  <br>
  <br>
  <div class="field">
    <%= f.label :current_password, :class => "fonte-edit", :style => "margin-right: 145px" %>
    <%= f.password_field :current_password, :class => "caixa-de-texto-login borda-caixa-texto", autocomplete: "current-password"%>
    <br>
    <small id="fullnameHelp" class="form-text text-muted">Digite sua senha atual antes de mudar sua senha.</small>
  </div>

  <br>
  <div class="field">
    <%= f.label :password, :class => "fonte-label", :style => "margin-right: 250px" %>
    <%= f.password_field :password, :class => "caixa-de-texto-login borda-caixa-texto", autocomplete: "new-password", :placeholder => "Ex: @Youser123"%>

    <small id="fullnameHelp" class="form-text text-muted">
      <% if @minimum_password_length %>
      <em><%= @minimum_password_length %> caracteres no mínimo</em>
      <% end %>
      <br />
      Deixe em branco caso não queira mudar.
    </small>
  </div>

  <br>
  <div class="field">
    <%= f.label :password_confirmation, :class => "fonte-edit", :style => "margin-right: 110px" %> <br/>
    <%= f.password_field :password_confirmation, :class => "caixa-de-texto-login borda-caixa-texto", autocomplete: "new-password", :placeholder => "Ex: @Youser123"%>
  </div>

  <br>
  <br>

  <div class="actions">
    <%= f.submit "Atualizar", :class => "atualizar" %>
  </div>
  <% end %>

  <p>
    <%= button_to "Apagar Conta", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, :class => "cancelar" %>
  </p>
  
  <br>
  <%= link_to "Voltar", :ideas, :class => "op2"%>
</div>